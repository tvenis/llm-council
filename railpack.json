{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "18",
    "python": "3.10"
  },
  "steps": {
    "install": {
      "inputs": [
        "...",
        { "local": true, "include": ["frontend/package.json", "frontend/package-lock.json"], "dest": "frontend/" }
      ],
      "commands": [
        "cd frontend && npm ci",
        "pip install -r requirements.txt"
      ]
    },
    "build": {
      "inputs": [
        { "step": "install" },
        { "local": true, "include": ["frontend/**"], "dest": "frontend/" }
      ],
      "commands": [
        "cd frontend && npm run build"
      ]
    }
  }
}
