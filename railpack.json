{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "18",
    "python": "3.10"
  },
  "steps": {
    "install": {
      "commands": [
        "cd frontend && npm ci",
        "pip install -r requirements.txt"
      ]
    },
    "build": {
      "inputs": [{"step": "install"}],
      "commands": [
        "cd frontend && npm run build"
      ]
    }
  }
}
